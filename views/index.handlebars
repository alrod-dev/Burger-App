<div class="container-fluid">

    <h1 style="text-align: center">Burger App</h1>

    <div class="container">

        <div class="row">

            <div class="col-lg-6">

            <h2>Burgers Not Eaten</h2>

            <ul>
                {{#each burger}}
                    {{#unless this.eaten}}
                        <li>
                            {{this.name}}

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="eaten" value="true">
                                <button type="submit">Devour!</button>
                            </form>


                        </li>
                    {{/unless}}
                {{/each}}
            </ul>

            </div>

            <div class="col-lg-6">

            <h2>Burgers That have been eaten!</h2>

            <ul>
                {{#each burger}}
                    {{#if this.eaten}}
                        <li>
                            {{this.name}}

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="eaten" value="false">
                                <button type="submit">Re-Order!</button>
                            </form>

                        </li>
                    {{/if}}
                {{/each}}
            </ul>

            </div>

        </div>

    </div>

    <div class="container" style="text-align: center">

        <h2>Add a Burger</h2>
        <form class="create-update-form" action="/" method="POST">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
                <label for="eaten">Eaten?</label><br>
                <input type="radio" name="eaten" value="1" checked> Devour!<br>
                <input type="radio" name="eaten" value="0"> Re-order
            </div>

            <button type="submit">Add a Burger</button>
        </form>


    </div>

</div>